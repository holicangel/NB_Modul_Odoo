<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="create_payment_receipt_wizard" model="ir.ui.view" >
            <field name="name">payment.recept.wizard</field>
            <field name="model">payment.recept.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div style="white-space: pre-line;">
                        <p><h5>Sistem akan ..</h5>
                        Fitur ini bisa digunakan untuk keperluan sbb.. :
                        1. Perubahan nomor Voucher
                        2. Adanya perubahan <b>Expiry Date</b> dari Voucher</p>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <!-- <button type="object" name="process_wizard" string="Process" class="oe_highlight"/> -->
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window
            id="action_create_payment_receipt_wizard"
            name="Confirm"
            res_model="payment.receipt.wizard"
            src_model="account"
            view_mode="form"
            multi="True"
            target="new"
            key2="client_action_multi"
        />
    </data>
</odoo>